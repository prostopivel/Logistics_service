@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <style>
        .button-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .button-container button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Admin Dashboard</h1>
    <div class="button-container">
        <button onclick="location.href='@Url.Action("ViewAllCustomers", "Admin")'">Просмотр всех заказчиков</button>
        <button onclick="location.href='@Url.Action("ViewAllManagers", "Admin")'">Просмотр всех менеджеров</button>
        <button onclick="location.href='@Url.Action("AddManager", "Admin")'">Добавление менеджера</button>
        <button onclick="location.href='@Url.Action("ViewAllOrders", "Admin")'">Просмотр всех заказов</button>
        <button onclick="location.href='@Url.Action("ManageTransport", "Admin")'">Управление транспортом</button>
        <button onclick="location.href='@Url.Action("ViewMap", "Admin")'">Просмотр карты</button>
    </div>
</body>
</html>