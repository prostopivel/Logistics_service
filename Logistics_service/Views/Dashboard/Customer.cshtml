@model string;
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <title>Customer Dashboard</title>
    <style>
        .button-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

            .button-container button {
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <h1>Customer Dashboard</h1>
    <div class="button-container">
        <button onclick="location.href='@Url.Action("Customer", "Customer", new { returnUrl = "\\Customer\\viewOrders" })'">Посмотреть заказы</button>
        <button onclick="location.href='@Url.Action("Customer", "Customer", new { returnUrl = "\\Customer\\createRequest" })'">Создать запрос</button>
        <button onclick="location.href='@Url.Action("Customer", "Customer", new { returnUrl = "\\Customer\\viewMap" })'">Посмотреть карту</button>
    </div>
</body>
</html>