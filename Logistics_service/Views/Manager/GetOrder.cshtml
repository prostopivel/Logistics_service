@model Logistics_service.ViewModels.OrderModels.CustomerOrderOutputModel[]

@{
    Layout = null;
}

<h2 class="error-message">@ViewBag.Error</h2>

<table>
    <thead>
        <tr>
            <th>Время заказа</th>
            <th>Email</th>
            <th>Адрес получения</th>
            <th>Адрес доставки</th>
            <th>Время доставки</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CreatedAt</td>
                    <td>@item.Email</td>
                    <td>@item.BeginningAddress</td>
                    <td>@item.DestinationAddress</td>
                    <td>@item.ArrivalTime</td>
                    <td>@item.Status</td>
                    <td>
                        <input type="button"
                               onclick='sendOrder("POST", "/manager/getOrder", @Html.Raw(Json.Serialize(item)))'
                               value="Принять"
                               class="accept-button" />
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div id="orders"></div>