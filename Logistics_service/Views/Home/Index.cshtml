@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Logistic Service</title>
    <style>
        .text-center {
            text-align: center;
        }

        .hidden {
            display: none;
        }

        .button-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

            .button-container button {
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
            }
    </style>
    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const token = urlParams.get('token');
        const role = urlParams.get('role');

        window.onload = function () {
            var currentUrl = window.location.href;
            var loginLink = document.querySelector('a[href*="api/auth/login"]');
            loginLink.href += encodeURIComponent(currentUrl.split('?')[0]);

            if (token && role) {
                localStorage.setItem('token', token);
                localStorage.setItem('role', role);

                let customerButton = document.querySelector('button[onclick*="api/dashboard/customer"]');
                let managerButton = document.querySelector('button[onclick*="api/dashboard/manager"]');
                let adminButton = document.querySelector('button[onclick*="api/dashboard/admin"]');

                customerButton.onclick = function () {
                    location.href = `/api/dashboard/customer?token=${encodeURIComponent(token)}&role=${encodeURIComponent(role)}`;
                };
                managerButton.onclick = function () {
                    location.href = `/api/dashboard/manager?token=${encodeURIComponent(token)}&role=${encodeURIComponent(role)}`;
                };
                adminButton.onclick = function () {
                    location.href = `/api/dashboard/admin?token=${encodeURIComponent(token)}&role=${encodeURIComponent(role)}`;
                };

                switch (role) {
                    case 'Administrator':
                        customerButton.classList.remove('hidden');
                        managerButton.classList.remove('hidden');
                        adminButton.classList.remove('hidden');
                        break;
                    case 'Manager':
                        customerButton.classList.remove('hidden');
                        managerButton.classList.remove('hidden');
                        adminButton.classList.add('hidden');
                        break;
                    case 'Customer':
                        customerButton.classList.remove('hidden');
                        managerButton.classList.add('hidden');
                        adminButton.classList.add('hidden');
                        break;
                    default:
                        customerButton.classList.add('hidden');
                        managerButton.classList.add('hidden');
                        adminButton.classList.add('hidden');
                        break;
                }
            } else {
                let customerButton = document.querySelector('button[onclick*="api/dashboard/customer"]');
                let managerButton = document.querySelector('button[onclick*="api/dashboard/manager"]');
                let adminButton = document.querySelector('button[onclick*="api/dashboard/admin"]');

                customerButton.classList.add('hidden');
                managerButton.classList.add('hidden');
                adminButton.classList.add('hidden');
            }
        };
    </script>
</head>
<body>
    <div class="text-center">
        <h2 class="text-center">Добро пожаловать в Logistic</h2>
        <p class="text-center">Сервис для заказа транспорта для различных целей в любую точку России и Беларуси</p>
        <p>Войти <a href="/api/auth/login?returnUrl=">здесь</a></p>
    </div>
    <div class="button-container">
        <button class="hidden" onclick="location.href='/api/dashboard/customer?token=&role='">Продолжить как заказчик</button>
        <button class="hidden" onclick="location.href='/api/dashboard/manager?token=&role='">Продолжить как менеджер</button>
        <button class="hidden" onclick="location.href='/api/dashboard/admin?token=&role='">Продолжить как администратор</button>
    </div>
</body>
</html>